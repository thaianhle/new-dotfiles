{
  // ğŸ§  General
  "workbench.startupEditor": "none",
  "workbench.editor.enablePreview": false,
  "editor.minimap.enabled": false,
  "editor.renderWhitespace": "none",
  "editor.cursorSmoothCaretAnimation": false,
  "editor.smoothScrolling": false,

  // ğŸ“ Watcher (giáº£m CPU, I/O)
  "files.watcherExclude": {
    "**/.git/**": true,
    "**/.hg/**": true,
    "**/.svn/**": true,
    "**/node_modules/**": true,
    "**/bower_components/**": true,
    "**/__pycache__/**": true,
    "**/.mypy_cache/**": true,
    "**/.pytest_cache/**": true,
    "**/.venv/**": true,
    "**/venv/**": true,
    "**/vendor/**": true,
    "**/bin/**": true,
    "**/obj/**": true,
    "**/.terraform/**": true,
    "**/.terragrunt-cache/**": true,
    "**/.ansible/**": true,
    "**/.cache/**": true,
    "**/*.log": true
  },

  // ğŸ” TÃ¬m kiáº¿m cÅ©ng exclude Ä‘á»ƒ nháº¹ hÆ¡n
  "search.exclude": {
    "**/node_modules/**": true,
    "**/vendor/**": true,
    "**/__pycache__/**": true,
    "**/.venv/**": true,
    "**/.terraform/**": true,
    "**/.ansible/**": true
  },

  // ğŸ Python (Pyright nháº¹ hÆ¡n MS Python)
  "python.languageServer": "Pylance",
  "python.analysis.typeCheckingMode": "off",
  "python.analysis.autoImportCompletions": false,
  "python.terminal.activateEnvironment": false,
  "pyright.openFilesOnly": true,

  // ğŸ§‘â€ğŸ’» Go
  "go.useLanguageServer": true,
  "go.toolsManagement.autoUpdate": false,
  "gopls": {
    "build.directoryFilters": ["-node_modules", "-vendor", "-.ansible", "-.cache"],
    "ui.completion.usePlaceholders": false,
    "analyses": {
      "unusedparams": true,
      "shadow": false
    },
    "staticcheck": false
  },

  // â˜¸ï¸ Kubernetes
  "yaml.schemas": {
    "kubernetes": "/*.yaml"
  },
  "yaml.validate": true,
  "yaml.format.enable": false,

  // âš™ï¸ Ansible
  "ansible.python.interpreterPath": "/usr/bin/python3",
  "ansible.validation.enabled": false,
  "ansible.useFullyQualifiedCollectionNames": false,

  // ğŸŒ Terraform
  "terraform.languageServer.enable": true,
  "terraform.languageServer.settings": {
    "experimentalFeatures": {
      "validateOnSave": false
    }
  },

  // ğŸš Shell
  "[shellscript]": {
    "editor.formatOnSave": false
  },

  // ğŸ§  Extensions runtime (nÃªn disable náº¿u khÃ´ng dÃ¹ng)
  "extensions.ignoreRecommendations": true,
  "update.mode": "manual",
  "extensions.autoCheckUpdates": false,
  "extensions.autoUpdate": false
}
